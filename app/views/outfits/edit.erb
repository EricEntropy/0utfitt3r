<h1>Edit your Outfit</h1>


<form action="/outfits/<%=@outfit.id%>/edit" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Edit Here:</label>
<br>
<input type="text" name="name" id="name"> value = <%=@outfit.name%></input>
<br>
<input type="text" name="tops" id="tops"> value = <%=@outfit.tops%></input>
<br>
<input type="text" name="bottoms" id="bottoms"> value = <%=@outfit.bottoms%></input>
<br>
<input type="submit" value="Finish Edit">
</form>